!!!5
%html
  %head
    %meta{charset: 'utf-8'}
  %body
    = render 'posts/header'
    .keywords-index-main
      - if current_user.keywords.present?
        %ul{ class: 'keywords-index-main__lists' }
          - current_user.keywords.each do |keyword|
            %li{ class: 'keywords-index-main__lists__list' }
              .keywords-index-main__lists__list__word
                = keyword.word
              = link_to '削除', "/keywords/#{ keyword.id }", method: :delete, class: 'keywords-index-main__lists__list__delete-btn'
            %hr
      - else
        .keywords-index-main__lists
          %span まだキーワードは登録されていません。

      = form_for [@keyword], class: 'keywords-index-main__form' do |f|
        = f.text_field :word, class: 'keywords-index-main__form__input', placeholder: 'キーワードを入力してください'
        = f.submit '追加する', class: 'keywords-index-main__form__input-btn'
    = render 'posts/footer'
