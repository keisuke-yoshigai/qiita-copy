!!!5
%html
  %head
    %meta{charset: 'utf-8'}
  %body{ class: 'index' }
    = render 'header'
    .main
      .main__header
        %h2.main__header__title
          プログラミングの知識を共有しよう。
        = link_to 'ノウハウ・Tipsを投稿する', root_path, class: 'main__header__btn'
      .main__body
        .main__body__tag
          = link_to '全て', root_path, class: 'main__body__tag--feed'
          = link_to 'キーワード', '/posts/show_matching_keyword', class: 'main__body__tag--all-posts'
          = link_to '自分の投稿', root_path, class: 'main__body__tag--my-posts'
        = render partial: 'posts', locals: { posts: @posts }
      = render 'sidebar'
    = render 'footer'
